<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"


    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearPet"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_below="@+id/pet"
        android:paddingBottom="10dp">

        <agency.tango.android.avatarview.views.AvatarView
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:id="@+id/petimageViwer"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baloshi"
            android:textSize="15sp"
            android:layout_toRightOf="@+id/petimageViwer"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:id="@+id/pettvName"
            android:paddingStart="20dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"

            android:layout_toEndOf="@+id/petimageViwer"
            android:layout_centerInParent="true"/>




    </RelativeLayout>

</RelativeLayout>